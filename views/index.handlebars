<div class="container">
  <h1>Add a burger! Then devour it if you get hungry</h1>
  <br>
  <br>
  <h2>Add Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      {{!-- <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Devoured --}}
    </div>

    <button type="button" class="btn" data-id={{this.id}} data-newDevoured={{devour}}>Submit Burger</button>
  </form>
  <br>
  <br>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <span><strong>{{this.id}} - {{this.burger_name}}</span></strong>
    <button type="button" class="btn" data-id={{this.id}} data-newDevoured={{devour}}>Submit Burger</button>

    {{/unless}}
    {{/each}}
  </ul>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <span><strong>{{this.id}} - {{this.burger_name}}</span></strong>
    <button type="button" class="btn" data-id={{this.id}} data-newDevoured={{devour}}>Submit Burger</button>

    {{/if}}
    {{/each}}
  </ul>

</div>