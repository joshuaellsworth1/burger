<div class="container">
  <h1>Add a burger! Then devour it if you get hungry</h1>
  <br>
  <br>
  <h2>Add Burger</h2>
  <form class="create-form">


    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    {{!-- <div class="form-group"> --}}
    {{!-- <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Devoured --}}
</div>
</form>
<br>
<br>

<ul>
  <h2>Add Burger</h2>
  {{#each burgers}}
  {{#unless devoured}}
  <form class="burger-form" method="POST">
    <button type="button" class="btn" id="submit-btn" data-id={{this.id}} data-newDevoured={{devour}}>Submit
      Burger</button>
  </form>
  {{burger_name}} <span>#{{id}}</span>
  {{/unless}}
  {{/each}}
  </ul>


<ul>
  <h2>Devour this Jawn</h2>
  {{#each burgers}}
  {{#unless devoured}}
  <form class="devour-form" method="PUT">
    <button type="button" class="btn" id="devour-burger" data-id={{this.id}} data-newDevoured={{devour}}>Button</button>
  </form>
  {{burger_name}} <span>#{{id}}</span>
  {{/unless}}
  {{/each}}
</ul>

</div>